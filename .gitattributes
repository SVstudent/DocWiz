# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyi text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Web
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
